{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
